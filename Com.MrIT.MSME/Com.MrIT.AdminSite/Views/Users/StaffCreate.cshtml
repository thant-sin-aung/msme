@model Com.MrIT.ViewModels.VmMrUser
@{
    ViewData["SuperTitle"] = "Staff";
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="card card-info">
    <div class="card-header"></div>
    <form class="form-horizontal" asp-action="StaffCreate" asp-controller="Users" method="Post" enctype="multipart/form-data">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group row">
                        <label asp-for="FullName" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="FullName" class="form-control" required/>
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group row">
                        <label asp-for="Email" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Email" class="form-control" required/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group has-feedback row">
                        <label asp-for="Password" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Password" class="form-control" required>
                            <span asp-validation-for="Password"></span>
                        </div>

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group row">
                        <label asp-for="MobileNo" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="MobileNo" class="form-control" />
                            <span asp-validation-for="MobileNo" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group row">
                        <label asp-for="UserRole" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <select asp-for="UserRole" class="form-control select2" asp-items="ViewBag.UserRoleList" style="width: 100%;"></select>
                            <span asp-validation-for="UserRole" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group row">
                        <label asp-for="Address" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group row">
                        <label asp-for="City" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group row">
                        <label asp-for="State" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="State" class="form-control" />
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group row">
                        <label asp-for="Country" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Country" class="form-control" />
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group row">
                        <label asp-for="PostalCode" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="PostalCode" class="form-control" />
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group row">
                        <label asp-for="ProfileImage" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input type="hidden" asp-for="ProfileImage" />
                            <label class="custom-file-label" for="file_profile">Choose file...</label>
                            <input type='file' id="file_profile" class="custom-file-input" name="file_profile" accept=".jpg,.jpeg,.png" />
                            <br />
                            <span class="text-danger">
                                Note: Please select only image file (eg: .png, .jpeg, .jpg)<br /> Max File size : 1MB allowed 
                            </span>
                            <br />
                                <span asp-validation-for="ProfileImage" class="text-danger"></span>
                                <img id="img_profile" src="//:0" alt="Featured Image" style="width:200px;height:200px;" />
                            </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer pb-2">
            <div class="row m-1">
                <div class="col-sm-6">
                    <button type="button" class="btn btn-success" id="btnCreate">Create</button>
                    <a href="@Url.Action("StaffListing","Users")" class="btn btn-default">Cancel</a>
                </div>
            </div>          
        </div>
        <!-- /.box-footer -->
    </form>
</div>

