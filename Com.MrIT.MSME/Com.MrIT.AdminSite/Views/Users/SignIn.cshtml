@model Com.MrIT.ViewModels.VmMrUser
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_Layout_Empty.cshtml";
}

<div class="login-box">
    <div class="login-logo">
        <a href="~/themes/index2.html"><b>Mr.</b>Sports</a>
    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">Sign in to start your session</p>

            <form action="@Url.Action("SignIn","Users")" method="post">
                <div class="input-group mb-3 has-feedback">
                    <input type="email" asp-for="Email" class="form-control" placeholder="Email" required autofocus>
                    <span asp-validation-for="Email"></span>
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3 has-feedback">
                    <input type="password" asp-for="Password" class="form-control" placeholder="Password" required>
                    <span asp-validation-for="Password"></span>
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-8">

                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
            <div class="row">
                <div class="col-xs-12">
                    @{
                        if (TempData["ErrorMessage"] != null)
                        {
                            <span class="text-danger"> @TempData["ErrorMessage"] </span>
                        }
                    }

                </div>
            </div>
            <p class="mb-1">
                <a href="#">I forgot my password</a>
            </p>

        </div>
        <!-- /.login-card-body -->
    </div>
</div>
<!-- /.login-box -->
